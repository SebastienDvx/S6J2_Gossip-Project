<p id="notice"><%= notice %></p>

<h1>Gossips</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Auteur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <td><%= gossip.content %></td>
        <td><%= gossip.user.username %></td>
        <td><%= link_to 'Show', gossip, class: "btn btn-success" %></td>
        <% if current_user.id == gossip.user.id %>
          <td><%= link_to 'Edit', edit_gossip_path(gossip), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', gossip, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gossip', new_gossip_path, class: "btn btn-info" %>
